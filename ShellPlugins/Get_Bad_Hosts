# WORK IN PROGRESS

gbh(){
	RERR(){ echo "[L${1}] ERROR: $2" 1>&2; return 1; }
	ERR(){ echo "[L${1}] ERROR: $2" 1>&2; }
	
	[ $UID -eq 0 ] && RERR "$LINENO" "Root access isn't required."
	
	declare -i DEPCOUNT=0
	for DEP in /bin/{cat,grep,gzip} /usr/bin/{wget,dos2unix,uniq,sort,tr}
	{
		[ -x "$DEP" ] || {
			ERR "$LINENO" "Dependency '$DEP' not met."
			DEPCOUNT+=1
		}
	}
	
	[ $DEPCOUNT -eq 0 ] || return 1

	[ $# -eq 0 ] || RERR "$LINENO" "No arguments required."

	URL="http://www.montanamenagerie.org/hostsfile/hosts.txt"
	DESTINATION="$HOME/Downloads/GBH.txt"

	[ -d "${DESTINATION%\/*}" ] || RERR "$LINENO" "Destination directory not found."
	[ -f "${DESTINATION}.gz" ] && RERR "$LINENO" "File already present."

	/usr/bin/wget -q --show-progress "$URL" -O "$DESTINATION"
	/usr/bin/dos2unix "$DESTINATION"

	#TODO - Check using while read rather than cat didn't break this.
	while read -r; do
		echo "$REPLY"
	done <<< "$DESTINATION"\
		| /usr/bin/tr "\t" " "\
		| /bin/grep -a "^127.0.0.1 "\
		| /usr/bin/uniq\
		| /usr/bin/sort\
		| /bin/gzip -c\
		> "$DESTINATION"
}
