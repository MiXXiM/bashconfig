l2f()
{
	# Load error function.
	RERR(){ echo "ERROR: $1" 1>&2; return; }

	# Check for root access.
	[ $UID -eq 0 ] && RERR "Root access isn't recommended."

	# If number of arguments is not 0, error and return.
	[ $# -gt 0 ] || RERR "Please specify a file to be read."

	# If executable /usr/bin/links2 is found.
	if type -P /usr/bin/links2 &> /dev/null
	then
		# Open up specified file (without viewing source) in links2.
		/usr/bin/links2 -force-html file://"$@"
	else
		RERR "Dependency '/usr/bin/links2' not found."
	fi
}
