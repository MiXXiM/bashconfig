#!/bin/bash

#----------------------------------------------------------------------------------
# Project Name      - $HOME/ShellPlugins/Load_File_Links2
# Started On        - Thu 14 Sep 20:10:21 BST 2017
# Last Change       - Thu  5 Oct 18:08:50 BST 2017
# Author E-Mail     - terminalforlife@yahoo.com
# Author GitHub     - https://github.com/terminalforlife
#----------------------------------------------------------------------------------

l2f(){
	# Load error function.
	RERR(){ echo "[L${1}] ERROR: $2" 1>&2; return 1; }

	# Check for root access.
	[ $UID -eq 0 ] && RERR "$LINENO" "Root access isn't recommended."

	# If number of arguments is not 0, error and return.
	[ $# -gt 0 ] || RERR "$LINENO" "Please specify a file to be read."

	# If executable /usr/bin/links2 is found.
	[ -x /usr/bin/links2 ] && {
		# Open up specified file (without viewing source) in links2.
		/usr/bin/links2 -force-html file://"$@"
	} || {
		RERR "$LINENO" "Dependency '/usr/bin/links2' not found."
	}
}
